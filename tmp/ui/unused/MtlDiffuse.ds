	parmtag	{ "vray_type" "color" }
    }
    parm {
	name	"transparency"
	label	"Transparency"
	type	color
	size	3
	default	{ "0" "0" "0" }
	range	{ 0 10 }
	export	none
	parmtag	{ "cook_dependent" "1" }
	parmtag	{ "vray_plugin" "MtlDiffuse" }
	parmtag	{ "vray_pluginattr" "transparency" }
