#include "vfh_material_common.ds"

    parm {
	name	"diffuse"
	label	"Diffuse"
	type	color
	size	3
	default	{ "0.5" "0.5" "0.5" }
	range	{ 0 10 }
	export	none
	parmtag	{ "cook_dependent" "1" }
