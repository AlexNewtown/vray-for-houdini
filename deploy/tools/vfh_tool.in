    <toolMenuContext name="viewer">
        <contextNetType>{NET_CONTEXT}</contextNetType>
    </toolMenuContext>

    <toolMenuContext name="network">
        <contextOpType>{OP_CONTEXT}/{OP_NAME}</contextOpType>
    </toolMenuContext>

    <toolSubmenu>{ITEM_MENU}</toolSubmenu>

