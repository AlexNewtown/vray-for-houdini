# V-Ray For Houdini OS X Launcher
#

LAUNCHER_LOCATION=`dirname $0`

HOUDINI_VER_MAJOR=@HOUDINI_VERSION@
HOUDINI_VER_BUILD=@HOUDINI_VERSION_BUILD@

HOUDINI_INSTALL_ROOT=/Applications/Houdini/Houdini${HOUDINI_VER_MAJOR}.${HOUDINI_VER_BUILD}

cd ${HOUDINI_INSTALL_ROOT}/Frameworks/Houdini.framework/Versions/${HOUDINI_VER_MAJOR}.${HOUDINI_VER_BUILD}/Resources
source houdini_setup
cd ${LAUNCHER_LOCATION}

export VRAY_APPSDK="${LAUNCHER_LOCATION}/appsdk"
export VRAY_UI_DS_PATH="${LAUNCHER_LOCATION}/ui"
export VRAY_FOR_HOUDINI_AURA_LOADERS="${LAUNCHER_LOCATION}/vfh_home/libs"
export VFH_PATH="${LAUNCHER_LOCATION}/vfh_home/bin:${VRAY_APPSDK}/bin:${VRAY_FOR_HOUDINI_AURA_LOADERS}"
export VFH_HOUDINI_PATH="${LAUNCHER_LOCATION}/vfh_home"

export PATH="${VFH_PATH}:${PATH}"
export HOUDINI_PATH="${VFH_HOUDINI_PATH}:${HOUDINI_PATH}:&"
export HOUDINI13_VOLUME_COMPATIBILITY=1
export HDF5_DISABLE_VERSION_CHECK=1

# Start Houdini
houdini -foreground $*
