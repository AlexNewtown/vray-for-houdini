# V-Ray For Houdini OS X Launcher
#

# Use OpenVDB < 3
#
export HOUDINI13_VOLUME_COMPATIBILITY=1

export HOUDINI_VER_MAJOR=@HOUDINI_VERSION@
export HOUDINI_VER_FULL=${HOUDINI_VER_MAJOR}.@HOUDINI_VERSION_BUILD@

# DO NOT EDIT STUFF BELOW
#
LAUNCHER_FILEPATH=`readlink -f $0`
export LAUNCHER_LOCATION=`dirname ${LAUNCHER_FILEPATH}`
export HOUDINI_USER_DIR=${HOME}/houdini${HOUDINI_VER_MAJOR}

# V-Ray Application SDK variables
export VRAY_SDK="${LAUNCHER_LOCATION}/appsdk"
export VRAY_PATH="${VRAY_SDK}/bin"

# V-Ray JSON plugin descriptions
export VRAY_PLUGIN_DESC_PATH="${LAUNCHER_LOCATION}/plugins_desc"

# Set VFB on top
export VRAY_VFB_ALWAYS_ON_TOP=1

# Houdini
export HOUDINI_DSO_ERROR=1
export HFS="@HOUDINI_FRAMEWORK_ROOT@/Resources"
export H="${HFS}"
export HB="${H}/bin"
export HDSO="${H}/../Libraries"
export HD="${H}/demo"
export HH="${H}/houdini"
export HHC="${HH}/config"
export HT="${H}/toolkit"
export HSB="${HH}/sbin"
export TEMP=/tmp
export JAVA_HOME=/Library/Java/Home

# Add libs to path
export PATH=${HB}:${HSB}:${VRAY_PATH}:${PATH}
export DYLD_LIBRARY_PATH=${VRAY_SDK}/bin:${HOUDINI_USER_DIR}/vfh/lib:${DYLD_LIBRARY_PATH}

# Install Files
mkdir -p "${HOUDINI_USER_DIR}/dso"
mkdir -p "${HOUDINI_USER_DIR}/toolbar"
mkdir -p "${HOUDINI_USER_DIR}/config/Icons"
mkdir -p "${HOUDINI_USER_DIR}/scripts"
mkdir -p "${HOUDINI_USER_DIR}/vfh/lib"

cp -R "${LAUNCHER_LOCATION}/dso/vray_for_houdini.so" "${HOUDINI_USER_DIR}/dso/"
cp -R "${LAUNCHER_LOCATION}/deploy/ROP_vray.svg"     "${HOUDINI_USER_DIR}/config/Icons/"
cp -R "${LAUNCHER_LOCATION}/deploy/scripts/python"   "${HOUDINI_USER_DIR}/scripts"
cp -R "${LAUNCHER_LOCATION}/deploy/scripts/shop"     "${HOUDINI_USER_DIR}/scripts"

# Copy shelves
for SHELF_FILE in `find "${LAUNCHER_LOCATION}/deploy" -name "*.shelf"`; do
	cp -R "${SHELF_FILE}" "${HOUDINI_USER_DIR}/toolbar/"
done

# Copy additional libraries
if [ -d "${LAUNCHER_LOCATION}/deploy/lib" ]; then
	for DSO_FILE in `find "${LAUNCHER_LOCATION}/deploy/lib" -name "*.so"`; do
		cp -R "${DSO_FILE}" "${HOUDINI_USER_DIR}/vfh/lib/"
	done
fi

# Start Houdini
"${HFS}/bin/houdini" -foreground $*
