    parm {
        name    "use_secondary_matte"
        label   "Use Secondary Matte"
        type    toggle
        default { "1" }
        help    "Whether to use the secondary matte color/map"
        range   { 0 1 }
        export  none
        parmtag { "cook_dependent" "1" }
        parmtag { "vray_plugin" "SettingsEnvironment" }
        parmtag { "vray_pluginattr" "use_secondary_matte" }
        parmtag { "vray_type" "boolean" }
    }
