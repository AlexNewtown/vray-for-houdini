        parmtag { "vray_plugin" "SettingsEnvironment" }
        parmtag { "vray_pluginattr" "refract_color" }
        parmtag { "vray_type" "color" }
        invisible
    }

    parm {
        name    "refract_tex"
        label   "Refraction"
        type    color4
        size    4
        default { "0" "0" "0" "1" }
        help    "Refraction map"
        range   { 0 10 }
        export  none
        parmtag { "cook_dependent" "1" }
        parmtag { "vray_plugin" "SettingsEnvironment" }
        parmtag { "vray_pluginattr" "refract_tex" }
        parmtag { "vray_label" "refraction" }
