{
    name    SettingsEnvironment
    label   "Environment Settings"
    parmtag { spare_category "SettingsEnvironment" }
    parmtag { vray_plugin "SettingsEnvironment" }

    parm {
        name    "global_light_level"
        label   "Global Light Level"
        type    color
        size    3
        default { "1" "1" "1" }
        help    "A global light level multiplier for all lights"
        range   { 0 10 }
        export  none
        parmtag { "cook_dependent" "1" }
        parmtag { "vray_plugin" "SettingsEnvironment" }
        parmtag { "vray_pluginattr" "global_light_level" }
        parmtag { "vray_type" "color" }
    }

    parm {
        name    "bg_color"
        label   "Bg Color"
        type    color
        size    3
        default { "1" "1" "1" }
        help    "Environment color"
        range   { 0 10 }
        export  none
        parmtag { "cook_dependent" "1" }
        parmtag { "vray_plugin" "SettingsEnvironment" }
        parmtag { "vray_pluginattr" "bg_color" }
        parmtag { "vray_type" "color" }
        invisible
    }

    parm {
        name    "bg_tex"
        label   "Background"
        type    color4
        size    4
        default { "0" "0" "0" "1" }
        help    "Environment map"
        range   { 0 10 }
        export  none
        parmtag { "cook_dependent" "1" }
        parmtag { "vray_plugin" "SettingsEnvironment" }
        parmtag { "vray_pluginattr" "bg_tex" }
        parmtag { "vray_label" "background" }
        parmtag { "vray_type" "Texture" }
    }

    parm {
        name    "bg_tex_mult"
        label   "Background Mult"
        type    float
        default { "1" }
        help    "Environment map multiplier"
        range   { 0 1 }
        export  none
        parmtag { "cook_dependent" "1" }
        parmtag { "vray_plugin" "SettingsEnvironment" }
        parmtag { "vray_pluginattr" "bg_tex_mult" }
        parmtag { "vray_type" "float" }
        invisible
    }

