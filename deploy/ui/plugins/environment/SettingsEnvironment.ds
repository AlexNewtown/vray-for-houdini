    parm {
        name    "secondary_matte_tex"
        label   "Secondary Matte"
        type    color4
        size    4
        default { "0" "0" "0" "1" }
        help    "Secondary matte texture"
        range   { 0 10 }
        export  none
        parmtag { "cook_dependent" "1" }
        parmtag { "vray_plugin" "SettingsEnvironment" }
