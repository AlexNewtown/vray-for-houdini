			help	"Defines the rotation of the blades (in radians)"
			range	{ 0 64 }
			export	none
			parmtag	{ "cook_dependent" "1" }
			parmtag	{ "vray_plugin" "CameraPhysical" }
			parmtag	{ "vray_pluginattr" "blades_rotation" }
			parmtag	{ "vray_type" "float" }
