		COMMAND
			tar jcf ${INSTALL_RELEASE_ARCHIVE_FILEPATH} ${INSTALL_RELEASE_SUBDIR}
		WORKING_DIRECTORY
			${INSTALL_RELEASE_ROOT}
	)
endif()
